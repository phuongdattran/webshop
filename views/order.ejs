<%- include('head'); %>
<%- include('navbar'); %>

    <!-- Start All Title Box -->
    <div class="all-title-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>My Account</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Shop</a></li>
                        <li class="breadcrumb-item active">My Orders</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End All Title Box -->

    <div class="contact-box-main">
        <div class="container">
            <div class="row">
                <h2>My Orders</h2>
            </div>
            <div class="col-lg-6 col-sm-6">
            </div> 
                <% for(let i=0; i<orderInfo.length; i++) {%>
                <div class="row my-5">
                    <div class="col-lg-6 col-sm-6 text-center">
                        <p><span class="font-weight-bold">Order#</span>: <%= orderInfo[i]._id %></p> 
                        <p><span class="font-weight-bold">Date</span>: <%= orderInfo[i].date.split("T")[0] %> <%= orderInfo[i].date.substr(11,8) %></p> 
                    </div>
                    <div class="col-lg-6 col-sm-6 text-center">
                        <a href="/myaccount/order/details/<%= orderInfo[i]._id %>" class="ml-auto btn hvr-hover m-2">Details</a>
                    </div>
                </div>
                <% } %> 
        </div>
    </div>

<%- include('footer'); %>